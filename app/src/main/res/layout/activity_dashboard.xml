<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context=".Dashboard">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome back"
                            android:textColor="#6B7280"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_regular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dashboard"
                            android:textColor="#111827"
                            android:textSize="28sp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/menu_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_menu"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
                
                <!-- Statistics Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">
                    
                    <!-- Total Products Stat -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Products"
                                android:textColor="#6B7280"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_regular"/>
                                
                            <TextView
                                android:id="@+id/total_products"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textColor="#111827"
                                android:textSize="24sp"
                                android:fontFamily="@font/inter_extrabold"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Total Value Stat -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inventory Value"
                                android:textColor="#6B7280"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_regular"/>
                                
                            <TextView
                                android:id="@+id/inventory_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 52.4M"
                                android:textColor="#111827"
                                android:textSize="24sp"
                                android:fontFamily="@font/inter_extrabold"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                
                <!-- Quick Actions Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textColor="#111827"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginBottom="16dp"/>
                
                <!-- Catalog and Add Data Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    
                    <!-- Catalog Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_catalog"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#262626"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_home"
                                android:layout_marginBottom="12dp"
                                app:tint="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product Catalog"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View all products"
                                android:textColor="#D1D5DB"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_regular"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Add Data Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_add_data"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#10B981"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/ic_input_add"
                                android:layout_marginBottom="12dp"
                                app:tint="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Product"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Create new product"
                                android:textColor="#D1D5DB"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_regular"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Recent Products Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Products"
                    android:textColor="#111827"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginBottom="12dp"/>
                
                <!-- Recent Products List -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E5E7EB"
                    android:layout_marginBottom="24dp">
                    
                    <!-- Container for all product items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <!-- Sample Product Item 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">
                            
                            <ImageView
                                android:id="@+id/product1_image"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/product_placeholder"
                                android:scaleType="centerCrop"
                                android:background="#F3F4F6"
                                android:layout_marginEnd="16dp"/>
                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:id="@+id/product1_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Salomon XT-4"
                                    android:textColor="#111827"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/inter_medium"/>
                                
                                <TextView
                                    android:id="@+id/product1_stock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15 in stock"
                                    android:textColor="#6B7280"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/inter_regular"/>
                            </LinearLayout>
                            
                            <TextView
                                android:id="@+id/product1_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 3.500.000"
                                android:textColor="#111827"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_medium"/>
                        </LinearLayout>
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E5E7EB"/>
                            
                        <!-- Sample Product Item 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">
                            
                            <ImageView
                                android:id="@+id/product2_image"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/product_placeholder"
                                android:scaleType="centerCrop"
                                android:background="#F3F4F6"
                                android:layout_marginEnd="16dp"/>
                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:id="@+id/product2_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Arc'teryx Beta LT"
                                    android:textColor="#111827"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/inter_medium"/>
                                
                                <TextView
                                    android:id="@+id/product2_stock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5 in stock"
                                    android:textColor="#6B7280"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/inter_regular"/>
                            </LinearLayout>
                            
                            <TextView
                                android:id="@+id/product2_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 5.800.000"
                                android:textColor="#111827"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_medium"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E5E7EB"/>
                        
                        <!-- View All Button -->
                        <TextView
                            android:id="@+id/view_all_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View All Products"
                            android:textColor="#4F46E5"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Features Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textColor="#111827"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                    <!-- Sensor Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_sensor"
                                android:layout_marginBottom="12dp"
                                app:tint="#6366F1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sensors"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View sensor data"
                                android:textColor="#6B7280"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_regular"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Maps Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_maps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_map"
                                android:layout_marginBottom="12dp"
                                app:tint="#6366F1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maps"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View location"
                                android:textColor="#6B7280"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_regular"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Speech Recognition Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_speech"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_navbar"
                                android:layout_marginBottom="12dp"
                                app:tint="#6366F1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Speech"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Voice to text"
                                android:textColor="#6B7280"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_regular"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <ListView
            android:id="@+id/nav_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:paddingTop="24dp"/>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>